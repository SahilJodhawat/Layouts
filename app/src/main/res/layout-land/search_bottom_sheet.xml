<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:fitsSystemWindows="true"
    android:id="@+id/constraint">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/filter_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/roboto_medium"
            android:textSize="19dp"
            android:textColor="#292724"
            android:text="@string/filter"
            android:layout_marginStart="20dp"
            android:layout_marginTop="14dp"/>

        <TextView
            android:id="@+id/category_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="45dp"
            android:layout_marginStart="20dp"
            android:text="@string/select_category"
            android:textSize="16dp"
            android:textColor="#292724"
            android:fontFamily="@font/roboto"/>


        <Spinner
            android:id="@+id/all_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="74dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="21dp"
            android:background="@drawable/spinner_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category_txt"
            android:layout_marginTop="69dp"
            android:layout_marginStart="20dp"
            android:text="@string/select_subcategory"
            android:textSize="16dp"
            android:textColor="#292724"
            android:fontFamily="@font/roboto"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="165.32dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="21dp"
            tools:listitem="@layout/support_simple_spinner_dropdown_item"
            android:background="@drawable/spinner_background" />


        <TextView
            android:id="@+id/group_filter_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/roboto_medium"
            android:textSize="19dp"
            android:textColor="#292724"
            android:text="@string/group_filter"
            android:layout_marginStart="20dp"
            android:layout_marginTop="234dp"/>

        <Spinner
            android:id="@+id/group_filter_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="268.32dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="21dp"
            android:background="@drawable/spinner_background" />
        <TextView
            android:id="@+id/post_filter_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/roboto_medium"
            android:textSize="19dp"
            android:textColor="#292724"
            android:text="@string/post_filter"
            android:layout_marginStart="20dp"
            android:layout_marginTop="341dp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="376dp"
            android:layout_marginStart="20dp"
            android:textColor="#707070"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18dp"
            android:textColor="#757474"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="386dp"
            android:text="@string/replied"
            android:layout_marginStart="54dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="406dp"
            android:layout_marginStart="20dp"
            android:textColor="#707070"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18dp"
            android:textColor="#757474"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="416dp"
            android:text="@string/tagged_in"
            android:layout_marginStart="54dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="376dp"
            android:layout_marginStart="175dp"
            android:textColor="#707070"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="386dp"
            android:layout_marginStart="206dp"
            android:textColor="#707070"
            android:textSize="18dp"
            android:fontFamily="@font/roboto"
            android:text="@string/not_replied"/>

        <Button
            android:id="@+id/reset_button"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/search_button"
            android:layout_marginTop="450dp"
            android:layout_marginStart="20dp"
            android:backgroundTint="#D2D2D2"
            android:text="@string/reset"
            tools:targetApi="lollipop" />

        <Button
            android:id="@+id/search_button"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/reset_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="450dp"
            android:layout_marginStart="200dp"
            android:text="@string/search"
            android:backgroundTint="#3C3C3C"
            android:textColor="@color/white"
            tools:targetApi="lollipop" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>



</androidx.coordinatorlayout.widget.CoordinatorLayout>