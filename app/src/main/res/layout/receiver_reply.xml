<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout1"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="220dp"
    android:layout_marginBottom="4dp"
    android:layout_height="wrap_content"
    android:background="@drawable/left_tv_bg">
    <TextView
        android:id="@+id/date3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/reply1"
        android:gravity="center"
        android:background="@drawable/date_background"
        android:text="13,may"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reply1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@drawable/my_border"
        android:paddingStart="4dp"
        android:paddingTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/image_line"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#732D77"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:id="@+id/name"
            android:text="Sender"
            app:layout_constraintStart_toStartOf="@+id/image_line"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textQuote1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:padding="8dp"
            android:textColor="#1A1616"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/image_line"
            app:layout_constraintTop_toBottomOf="@id/name"
            tools:text="h ghgdhg fgd \n h ghgdhg fgd h ghgdhg fgdn h ghgdhg fgd h ghgdhg fgdn h ghgdhg fgd h ghgdhg fgdn h ghgdhg fgd h ghgdhg fgdn h ghgdhg" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txtBody1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:textColor="#1A1616"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reply1"
        tools:text="@tools:sample/last_names" />

    <TextView
        android:id="@+id/receiver_reply_msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/reply1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="12:17"
        android:textColor="#999999"
        android:textSize="12dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/poppins"/>

    <TextView
        android:id="@+id/receiver_reply_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reply1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="#1D9DF3"
        android:textSize="12dp"
        android:text="Receiver"
        android:layout_marginTop="32dp"
        android:layout_marginStart="7dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>